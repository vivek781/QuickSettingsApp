<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/img_back" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/txt_quick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotobold"
                android:text="Quick"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_quick"
                android:fontFamily="@font/robotolight"
                android:text=" Settings"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18sdp" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ad_layout"
        android:layout_below="@+id/title_rl"
        android:layout_marginBottom="@dimen/ad_margin_below">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/first_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp">

                <RelativeLayout
                    android:id="@+id/rl_deviceinfo"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/settings_bg">

                    <RelativeLayout
                        android:id="@+id/top_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <RelativeLayout
                            android:id="@+id/img_"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/function_bg"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_17sdp"
                                android:background="@drawable/img_wifi" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_toRightOf="@+id/img_"
                            android:fontFamily="@font/robotobold"
                            android:text="Wifi"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_10sdp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/top_rl"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="@android:color/black" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view1"
                        android:layout_marginTop="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:fontFamily="@font/robotolight"
                            android:text="Off"
                            android:textColor="@color/white" />

                        <com.suke.widget.SwitchButton
                            android:id="@+id/switch_wifi"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            app:sb_checked_color="#232628" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_setting1"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/rl_deviceinfo"
                    android:background="@drawable/buttons_bg">

                    <RelativeLayout
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:background="@drawable/buttons_bg">

                        <RelativeLayout
                            android:id="@+id/top_r2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">

                            <RelativeLayout
                                android:id="@+id/img_1"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@drawable/function_bg"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/_17sdp"
                                    android:layout_height="@dimen/_17sdp"
                                    android:background="@drawable/mobile_data" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/txt_11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_toRightOf="@+id/img_1"
                                android:fontFamily="@font/robotobold"
                                android:text="Mobile Data"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_10sdp" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/top_r2"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:background="@android:color/black" />

                        <com.suke.widget.SwitchButton
                            android:id="@+id/switch_mobile"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_below="@+id/view2"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            app:sb_checked_color="#232628" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/second_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_rl"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp">

                <RelativeLayout
                    android:id="@+id/rl_bluetooth"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/settings_bg">

                    <RelativeLayout
                        android:id="@+id/btop_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <RelativeLayout
                            android:id="@+id/img_b"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/function_bg"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_17sdp"
                                android:background="@drawable/img_bluetooth" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txt_b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/img_b"
                            android:fontFamily="@font/robotobold"
                            android:text="Bluetooth"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view_b"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/btop_rl"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="@android:color/black" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_b"
                        android:layout_marginTop="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/txt_blt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:fontFamily="@font/robotolight"
                            android:text="Off"
                            android:textColor="@color/white" />

                        <com.suke.widget.SwitchButton
                            android:id="@+id/switch_bluetooth"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            app:sb_checked_color="#232628" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_gps"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/rl_bluetooth"
                    android:background="@drawable/buttons_bg">

                    <RelativeLayout
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:background="@drawable/buttons_bg">

                        <RelativeLayout
                            android:id="@+id/gtop_r2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">

                            <RelativeLayout
                                android:id="@+id/img_g"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@drawable/function_bg"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/_17sdp"
                                    android:layout_height="@dimen/_17sdp"
                                    android:background="@drawable/gps" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/txt_g"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_toRightOf="@+id/img_g"
                                android:fontFamily="@font/robotobold"
                                android:text="GPS(Location)"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_10sdp" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/view_g"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/gtop_r2"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:background="@android:color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/view_g">

                            <TextView
                                android:id="@+id/txtgps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:fontFamily="@font/robotolight"
                                android:text="Quick GPS Settings"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_8sdp" />

                            <com.suke.widget.SwitchButton
                                android:id="@+id/switch_gps"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                app:sb_checked_color="#232628" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/third_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/second_rl"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp">

                <RelativeLayout
                    android:id="@+id/rl_airplane"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/settings_bg">

                    <RelativeLayout
                        android:id="@+id/atop_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <RelativeLayout
                            android:id="@+id/img_a"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/function_bg"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_17sdp"
                                android:background="@drawable/airplane" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txt_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_toRightOf="@+id/img_a"
                            android:fontFamily="@font/robotobold"
                            android:text="Airplane Mode"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_10sdp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view_air"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/atop_rl"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="@android:color/black" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_air">

                        <TextView
                            android:id="@+id/txt_airplane"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:fontFamily="@font/robotolight"
                            android:text="Quick Settings"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_8sdp" />

                        <com.suke.widget.SwitchButton
                            android:id="@+id/switch_airplane"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            app:sb_checked_color="#232628" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_ringer"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/rl_airplane"
                    android:background="@drawable/buttons_bg">

                    <RelativeLayout
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:background="@drawable/buttons_bg">

                        <RelativeLayout
                            android:id="@+id/ringer_r2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">

                            <RelativeLayout
                                android:id="@+id/img_r"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@drawable/function_bg"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/_17sdp"
                                    android:layout_height="@dimen/_17sdp"
                                    android:background="@drawable/ringer" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/txt_r"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_toRightOf="@+id/img_r"
                                android:fontFamily="@font/robotobold"
                                android:text="Ringer"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_10sdp" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/view_r"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/ringer_r2"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:background="@android:color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view_r"
                            android:layout_marginTop="@dimen/_7sdp">

                            <TextView
                                android:id="@+id/txt_gSetting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:fontFamily="@font/robotolight"
                                android:text="Ringer Settings"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_8sdp" />

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_8sdp"
                                android:background="@drawable/img_settting" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fourth_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/third_rl"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp">

                <RelativeLayout
                    android:id="@+id/rl_autoscreen"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/settings_bg">

                    <RelativeLayout
                        android:id="@+id/autotop_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <RelativeLayout
                            android:id="@+id/img_auto"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/function_bg"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_17sdp"
                                android:background="@drawable/auto_rotate" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txt_s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/img_auto"
                            android:fontFamily="@font/robotobold"
                            android:text="Auto Screen"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_10sdp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view_screen"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/autotop_rl"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="@android:color/black" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_screen"
                        android:layout_marginTop="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/txt_screen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:fontFamily="@font/robotolight"
                            android:text="Quick Settings"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_8sdp" />

                        <com.suke.widget.SwitchButton
                            android:id="@+id/switch_rotation"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            app:sb_checked_color="#232628" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_sync"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/rl_autoscreen"
                    android:background="@drawable/buttons_bg">

                    <RelativeLayout
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:background="@drawable/buttons_bg">

                        <RelativeLayout
                            android:id="@+id/sync_r2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">

                            <RelativeLayout
                                android:id="@+id/img_s"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@drawable/function_bg"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/_17sdp"
                                    android:layout_height="@dimen/_17sdp"
                                    android:background="@drawable/sync" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/txt_sync"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_toRightOf="@+id/img_s"
                                android:fontFamily="@font/robotobold"
                                android:text="Sync setting"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_10sdp" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/view_s"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/sync_r2"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:background="@android:color/black" />

                        <ImageView
                            android:id="@+id/sync_go"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_below="@+id/view_s"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_8sdp"
